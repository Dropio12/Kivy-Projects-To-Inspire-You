

<History>:
    orientation: 'vertical'
    spacing: dp(8)
    BoxLayout:
        size_hint_y: None
        height: dp(42)
        Text:   
            text: 'History'
            font_name: app.fonts.heading
            font_size: app.fonts.size.h4
            color: app.colors.secondary
            halign: 'center'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: .25
            id: wrapper_overview
            orientation: 'vertical'
            padding: [dp(12), dp(4)]
            BoxLayout:
                size_hint_y: None
                height: dp(24)
                SoftSpinner:
                    id: sp_overview
                    text: 'Spent'
                    values: ["Spent", "Deposited"]
                    size_hint_x: .3
                    radius: [self.height/2]
                Widget:
                    size_hint_x: .4
                SoftSpinner:
                    id: sp_overview
                    text: 'Yearly'
                    values: ["Yearly", "Monthly", "Daily"]
                    size_hint_x: .3
                    radius: [self.height/2]
            BoxLayout:
                orientation: 'vertical'
                Text:   
                    text: '$85.49'
                    font_name: app.fonts.heading
                    font_size: app.fonts.size.extra
                    color: app.colors.secondary
                    valign: 'bottom'
                    halign: 'center'
                Text:   
                    text: 'spent'
                    font_name: app.fonts.subheading
                    font_size: app.fonts.size.h5
                    color: app.colors.secondary
                    valign: 'top'
                    halign: 'center'
                    size_hint_y: None
                    height: dp(22)
        Widget:
            size_hint_y: .05
        BoxLayout:
            id: wrapper_transactions
            size_hint_y: .7
            orientation: 'vertical'
            padding: dp(10)
            BoxLayout:
                ScrollView:
                    do_scroll: [False, True]
                    size_hint_y: None
                    height: self.parent.height
                    GridLayout:
                        id: gl_history
                        cols: 1
                        spacing: dp(12)
                        size_hint_y: None
                        height: self.minimum_height